<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!--  Container event listener -->
	<bean class="org.springframework.xd.dirt.listener.ContainerEventListener">
		<constructor-arg ref="containerRepository" />
	</bean>
	
	<!--  Module event listener -->
	<bean class="org.springframework.xd.dirt.listener.ModuleEventListener">
		<constructor-arg ref="modulesRepository" />
		<constructor-arg ref="containerModulesRepository" />
	</bean>

</beans>
